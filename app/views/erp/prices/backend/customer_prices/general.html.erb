<% content_for :title do %>
    <%= t('.prices') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-table"></i> <%= t('.prices') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/edit', {
        text: t('.update_price'),
        href: erp_prices.general_update_backend_customer_prices_path,
        class: 'btn-noborder'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_prices.general_list_backend_customer_prices_path,
    keywords: [
        {
            text: t('.category_name'), name: 'erp_products_categories.name'
        }
    ],
    actions: [
        
    ],
    filters: [
        
    ],
    columns: [
        {
            text: t('.category_name'), name: "category_name", value: true, checked: true
        },
        {
            text: t('.min_max_qty'), name: "min_max_qty", value: true, checked: true
        },
        {
            text: t('.diameter'), name: "diameter", value: true, checked: true
        },
        {
            text: t('.price'), name: "price", value: true, checked: true
        }
    ]
) %>